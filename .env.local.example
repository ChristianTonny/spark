# Copy this file to .env.local and replace with your actual keys

# Clerk Keys (get from https://dashboard.clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
CLERK_SECRET_KEY=sk_test_your_key_here

# Convex URL (should already be set)
NEXT_PUBLIC_CONVEX_URL=https://your-convex-url.convex.cloud

# Resend Email Service (get from https://resend.com)
# Free tier: 3,000 emails/month, 100 emails/day
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=Spark <notifications@yourdomain.com>

# Convex Webhook Security (generate a random secret string)
CONVEX_WEBHOOK_SECRET=your_random_secret_string_here

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000
# In production: NEXT_PUBLIC_APP_URL=https://spark.rw
